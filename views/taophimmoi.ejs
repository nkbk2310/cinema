<!DOCTYPE html>
<html>

<head>
  <link rel='stylesheet' href='/stylesheets/taophimmoi.css' />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.theme.css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  <style>
    .modal-body {
      padding: 0 4rem
    }

    .modal-footer {
      justify-content: space-between;
    }
  </style>
</head>

<body ng-app="cinema" ng-controller="taophimmoiController">
  <!-- <header>
        <img src="/images/Logo-white.png" class="header-logo"> -->
  <!-- <div class="header-link-h1">
      <h1>phim mới</h1>
      <h1>thể loại</h1>
      <h1>phim lẻ</h1>
      <h1>phim bộ</h1>
      <h1>phim chiếu rạp</h1>
    </div>
  </header> -->
  <header>
    <div class="header1">
      <img src="/images/Logo-white.png" class="logo" />
    </div>
    <div class="header2">
      <div class="header2-1">
       <% if (!email) { %>  
        <h1 class="h1" data-toggle="modal" data-target="#signupModal">
          <i class=" fas fa-user-plus icon-user"></i>
          ĐĂNG KÝ
        </h1>
        <a href="/dangnhap" class="h1">
          <h1 class="h1">
            <i class="fas fa-sign-out-alt icon-sign-out"></i>
            ĐĂNG NHẬP
          </h1>
        </a>
      <% } %>
        <h1 class="h1">
          <i class="fas fa-upload fa-lg icon-upload"></i>
          TẠO PHIM MỚI
        </h1>
      </div>
      <div class="header2-2">
        <a href="/home">
          <i class="fas fa-home icon-home icon"></i>
        </a>
        <i class="fas fa-arrow-circle-left icon-back icon"></i>
      </div>
    </div>
  </header>

  <p class="title4">TẠO PHIM MỚI</p>
  <div class="div-left div-chung">
    <div class="img-chamh-div">
      <img class="img-chamh"
        src="https://cdn.fstoppers.com/styles/large-16-9/s3/lead/2014/10/dani-diamond-posing-how-to-model-photogaphy-best-top-fstoppersb.jpg" />
    </div>
    <button id="chamh-btn">
      <i class="fas fa-sign-out-alt chamh-btn-icon"></i>
      cho hình ảnh minh hoạ
    </button>
  </div>
  <div class="div-right div-chung">
    <div class="form div-center">
      <label>Tên bộ phim:</label>
      <input type="text" ng-model="movie.tenPhim">
    </div>
    <div class="form" class="div-center">
      <label>Thể loại phim:</label>
      <select ng-model="movie.theLoai">
        <option>Tiểu sử lịch sử</option>
        <option>Lãng mạn tình cảm</option>
        <option>Khoa học viễn tưởng</option>
        <option>Huyền bí huyền ảo</option>
        <option>Phiêu lưu mạo hiểm</option>
        <option>Phát luật hình sự</option>
        <option>Chiến tranh cổ trang</option>
        <option>Hành động</option>
        <option>Tâm lý</option>
        <option>Kinh dị</option>
        <option>Hài hước</option>
        <option>Hoạt hình</option>
        <option>Thể thao</option>
        <option>Kinh điển</option>
        <option>Vui nhộn</option>
        <option>Cổ trang</option>
        <option>Võ thuật</option>
      </select>
    </div>
    <div class="form" class="div-center">
      <label>Thời gian phát hành:</label>
      <div class="input-chung1">
        <input type="text" ng-model="movie.thoiGianTao" id="date">
      </div>
    </div>
    <div class="form" class="div-center">
      <label>Nội dung mô tả:</label>
      <textarea ng-model="movie.moTa"
        placeholder="Điền thông tin của phim, diễn viên chính, nội dung của phim..."></textarea>
    </div>
  </div>
  <div class="header3">
    <button id="tao-phim-btn" ng-click="taoPhim()">
      <i class="fa fa-upload fa-lg tao-phim-btn-icon"></i>
      tạo phim
    </button>
    <a href="/khanh" class="khanh-link">
      <button id="dang-nhap-btn">
        <i class="fas fa-sign-out-alt dang-nhap-btn-icon"></i>
        ĐĂNG NHẬP
      </button>
    </a>
  </div>

  <footer>
    <p>Copyright © Cinema Website 2017-2018</p>
  </footer>
  <!-- Modal -->
  <div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="signupleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="signupleModalLabel">đăng ký</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="recipient-name" class="col-form-label">Tên người dùng:</label>
              <input type="text" class="form-control" id="recipient-name" ng-model="user.tenDangNhap">
            </div>
          </form>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="recipient-name" class="col-form-label">Địa chỉ email:</label>
              <input type="email" class="form-control" id="recipient-name" ng-model="user.email">
            </div>
          </form>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="recipient-name" class="col-form-label">Mật khẩu:</label>
              <input type="password" class="form-control" id="recipient-name" ng-model="user.matKhau">
            </div>
          </form>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="recipient-name" class="col-form-label">Xác nhận mật khẩu:</label>
              <input type="password" class="form-control" id="recipient-name" ng-model="user.xacNhanMatKhau">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary float-left" data-dismiss="modal">Huỷ</button>
          <button type="button" ng-click="dangKy()" class="btn btn-primary">Tạo Tài Khoản</button>
        </div>
      </div>
    </div>
  </div>
</body>

</html>

<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.8/angular.min.js"></script>

<script>
  $(function () {
    $("#date").datepicker();
  });
</script>

<script src="/javascripts/taophimmoi.js"></script>