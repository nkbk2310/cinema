  <header>
    <div class="header1">
      <img src="/images/Logo-white.png" class="logo" />
    </div>
    <div class="header2">
      <div class="header2-1">
        <h1 class="h1">
          <i class=" fas fa-user-plus icon-user"></i>
          ĐĂNG KÝ
        </h1>
        <a href="/dangnhap" class="h1">
          <h1 class="h1">
            <i class="fas fa-sign-out-alt icon-sign-out"></i>
            ĐĂNG NHẬP
          </h1>
        </a>
        <h1 class="h1">
          <i class="fas fa-upload fa-lg icon-upload"></i>
          TẠO PHIM MỚI
        </h1>
      </div>
      <div class="header2-2">
        <a href="/home">
          <i class="fas fa-home icon-home icon"></i>
        </a>
        <i class="fas fa-arrow-circle-left icon-back icon"></i>
      </div>
    </div>
  </header>

  <p class="title4">TẠO PHIM MỚI</p>
  <div class="div-left div-chung">
    <div class="img-chamh-div">
      <img class="img-chamh"
        src="https://cdn.fstoppers.com/styles/large-16-9/s3/lead/2014/10/dani-diamond-posing-how-to-model-photogaphy-best-top-fstoppersb.jpg" />
    </div>
    <button id="chamh-btn">
      <i class="fas fa-sign-out-alt chamh-btn-icon"></i>
      cho hình ảnh minh hoạ
    </button>
  </div>
  <div class="div-right div-chung">
    <div class="form div-center">
      <label>Tên bộ phim:</label>
      <input type="text" ng-model="movie.tenPhim">
    </div>
    <div class="form" class="div-center">
      <label>Thể loại phim:</label>
      <select ng-model="movie.theLoai">
        <option>Tiểu sử lịch sử</option>
        <option>Lãng mạn tình cảm</option>
        <option>Khoa học viễn tưởng</option>
        <option>Huyền bí huyền ảo</option>
        <option>Phiêu lưu mạo hiểm</option>
        <option>Phát luật hình sự</option>
        <option>Chiến tranh cổ trang</option>
        <option>Hành động</option>
        <option>Tâm lý</option>
        <option>Kinh dị</option>
        <option>Hài hước</option>
        <option>Hoạt hình</option>
        <option>Thể thao</option>
        <option>Kinh điển</option>
        <option>Vui nhộn</option>
        <option>Cổ trang</option>
        <option>Võ thuật</option>
      </select>
    </div>
    <div class="form" class="div-center">
      <label>Thời gian phát hành:</label>
      <div class="input-chung1">
        <select class="text text">
          <option>Tháng</option>
          <option>Tháng 1</option>
          <option>Tháng 2</option>
          <option>Tháng 3</option>
          <option>Tháng 4</option>
          <option>Tháng 5</option>
          <option>Tháng 6</option>
          <option>Tháng 7</option>
          <option>Tháng 8</option>
          <option>Tháng 9</option>
          <option>Tháng 10</option>
          <option>Tháng 11</option>
          <option>Tháng 12</option>
        </select>
        <select class="text text2">
          <option>Năm</option>
          <option>Năm 2009</option>
          <option>Năm 2010</option>
          <option>Năm 2011</option>
          <option>Năm 2012</option>
          <option>Năm 2013</option>
          <option>Năm 2014</option>
          <option>Năm 2015</option>
          <option>Năm 2016</option>
          <option>Năm 2018</option>
          <option>Năm 2019</option>
        </select>
      </div>
    </div>
    <div class="form" class="div-center">
      <label>Nội dung mô tả:</label>
      <textarea ng-model="movie.moTa" placeholder="Điền thông tin của phim, diễn viên chính, nội dung của phim..."></textarea>
    </div>
  </div>
  <div class="header3">
    <button id="tao-phim-btn" ng-click="taoPhim()">
      <i class="fa fa-upload fa-lg tao-phim-btn-icon"></i>
      tạo phim
    </button>
    <a href="/khanh" class="khanh-link">
      <button id="dang-nhap-btn">
        <i class="fas fa-sign-out-alt dang-nhap-btn-icon"></i>
        ĐĂNG NHẬP
      </button>
    </a>
  </div>

  <footer>
    <p>Copyright © Cinema Website 2017-2018</p>
  </footer>
</body>

</html>

<script src="/javascripts/taophimmoi.js"></script>